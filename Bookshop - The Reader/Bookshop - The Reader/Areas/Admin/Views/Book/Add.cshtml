@using TheReader.Core.Models.Book;
@model BookFormViewModel
@{
    ViewBag.Title = "Add Book";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.ISBN" class="form-label">ISBN</label>
                <input asp-for="@Model.ISBN" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Author" class="form-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PublishedYear" class="form-label">PublishedYear</label>
                <input asp-for="@Model.PublishedYear" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PublishedYear" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Language" class="form-label">Language</label>
                <input asp-for="@Model.Language" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Language" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Pages" class="form-label">Pages</label>
                <input asp-for="@Model.Pages" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Pages" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GenreId" class="form-label">GenreId</label>
                <input asp-for="@Model.GenreId" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}