@model DetailsEventViewModel

@{
	ViewBag.Title = "Book Details";
}

@if (User.Identity?.IsAuthenticated == true)
{
	<h2 class="text-center">@ViewBag.Title</h2>
	<hr />
	<div class="container" style="display:inline">
		<a asp-area="" asp-controller="Event" asp-action="All" class="btn btn-primary profile-button mb-2 col-1" type="button">Back</a>

		<div class="row">
			<div class="card col-7 border-0">
				<p style="font-size:25px;"><u>@Model.Topic</u></p>
				<p class="mb-0"><span class="fw-bold">Локация: </span>@Model.Location</p>
				<p class="mb-0"><span class="fw-bold">Описание: </span>@Model.Description</p>
				<p class="mb-0"><span class="fw-bold">Цена за билет: </span>@Model.TicketPrice лв.</p>
				<p class="mb-0"><span class="fw-bold">Брой места: </span>@Model.Seats</p>
				<p class="mb-0"><span class="fw-bold">Дата и час: </span>@Model.Date</p>
				
				@if (User.IsInRole("Administrator"))
				{
					<a asp-controller="Event" asp-action="Edit" asp-route-Id="@Model.Id">
						<input type="submit" value="Edit" class="fs-6 btn btn-success mb-3 p-2" />
					</a>
					<a asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Delete</a>
				}
			</div>
		</div>
	</div>
}