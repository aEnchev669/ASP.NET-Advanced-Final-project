@model IEnumerable<BookServiceIndexModel> 
@{
	ViewData["Title"] = "Home Page"; var books = Model.ToList();
} 
@if (!books.Any())
{
	 <div class="mt-4 p-5 bg-light"> <h1 class="display-4">Welcome to the best Library</h1> <p class="lead">All books are sold</p> <hr class="my-4"> <p class="lead"> </p> </div>
} <div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < books.Count(); i++)
		{
			var book = books[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-30" style="height:400px" src="@book.ImageUrl" alt="@book.Title" alt="@book.Author">

				<div class="carousel-caption d-none d-md-block"> <h5> <a class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"> @book.Title</a> </h5> </div>
				
			</div>
		}
	</div> <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="visually-hidden">Previous</span> </button> <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="visually-hidden">Next</span> </button>
</div>